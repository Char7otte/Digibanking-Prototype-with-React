<%
var bodyContent = `
<div class="card auth-card">
  <h2>Create your OCBC Digital account</h2>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-error"><%= error %></div>
  <% } %>

  <form action="/register" method="POST" class="form">
      <label for="name">Full Name</label>
      <input id="name" type="text" name="name" required>

      <label for="email">Email</label>
      <input id="email" type="email" name="email" required>

      <label for="password">Password</label>
      <input id="password" type="password" name="password" required>

      <label for="confirmPassword">Confirm Password</label>
      <input id="confirmPassword" type="password" name="confirmPassword" required>

      <button type="submit" class="button primary full">Create account</button>
  </form>

  <p class="auth-meta">
      Already have an account?
      <a href="/login" class="link-primary">Log in</a>
  </p>
</div>
`;
%>

<%- include('layout', { title: "Register - OCBC Digital", body: bodyContent }) %>
